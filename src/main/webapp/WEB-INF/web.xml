<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>SpecialtyServlet</servlet-name>
        <servlet-class>com.sysoiev.rest.controller.SpecialtyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SpecialtyServlet</servlet-name>
        <url-pattern>/api/v1/specialties</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CustomerServlet</servlet-name>
        <servlet-class>com.sysoiev.rest.controller.CustomerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CustomerServlet</servlet-name>
        <url-pattern>/api/v1/customers</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AccountServlet</servlet-name>
        <servlet-class>com.sysoiev.rest.controller.AccountServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AccountServlet</servlet-name>
        <url-pattern>/api/v1/accounts</url-pattern>
    </servlet-mapping>
</web-app>